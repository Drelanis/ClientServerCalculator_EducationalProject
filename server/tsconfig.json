{
  "compilerOptions": {
    "target": "ES5",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@calculator/*": ["calculator/*"],
      "@calculatorConfig/*": ["calculator/config/*"]
    }
  },
  "include": ["src"]
}
